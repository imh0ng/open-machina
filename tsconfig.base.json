{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": false,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "open-machina-shared": ["packages/open-machina-shared/src/index.ts"],
      "open-machina-plugin": ["packages/open-machina-plugin/src/index.ts"],
      "open-machina-cli": ["packages/open-machina-cli/src/index.ts"]
    }
  }
}
