{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "include-v-in-tag": true,
  "separate-pull-requests": true,
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "chore",
      "section": "Miscellaneous",
      "hidden": false
    }
  ],
  "packages": {
    ".": {
      "release-type": "node",
      "component": "open-machina",
      "package-name": "open-machina",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/open-machina-cli": {
      "release-type": "node",
      "component": "open-machina-cli",
      "package-name": "open-machina-cli",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/open-machina-plugin": {
      "release-type": "node",
      "component": "open-machina-plugin",
      "package-name": "open-machina-plugin",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/open-machina-shared": {
      "release-type": "node",
      "component": "open-machina-shared",
      "package-name": "open-machina-shared",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/open-machina-web": {
      "release-type": "node",
      "component": "open-machina-web",
      "package-name": "@open-machina/web",
      "changelog-path": "CHANGELOG.md"
    }
  }
}
